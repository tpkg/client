#!/bin/sh

# Init file for monit

BASE=%BASE%
pidfile=$BASE/var/run/monit.pid

case "$1" in
'start')
	if [ -x $BASE/bin/monit ]; then
		$BASE/bin/monit -c $BASE/etc/monitrc -p $pidfile
	fi
	;;

'stop')
	if [ -f $pidfile ]
	then
		kill `cat $pidfile`
		rm -f $pidfile
	fi
	;;

'restart')
	$0 stop
	$0 start
	;;
*)
	echo "Usage: $0 { start | stop | restart }"
	exit 1
	;;
esac
exit 0

